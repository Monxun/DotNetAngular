@model AstreaX_MVC.ViewModels.CustomerViewModel;


<div class="container-fluid">
    <div class="row">
        <h1>Orders</h1>
    </div>
    <div class="row">
        <div class="col-md">
            <h3>Name</h3>
            <h5>@Model.FullName</h5>
        </div>
        <div class="col-md">
            <h3>Customer #</h3>
            <h5>@Model.CustomerNumber</h5>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Order #</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Description</th>
                    <th scope="col">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate</td>
                        <td>@order.Description</td>
                        <td>$@order.Total</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>